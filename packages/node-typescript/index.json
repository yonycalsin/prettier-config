{
  "$schema": "http://json.schemastore.org/prettierrc",
  "singleQuote": true,
  "trailingComma": "all",
  "semi": false,
  "endOfLine": "lf",
  "printWidth": 120,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "package.json",
      "options": {
        "plugins": ["prettier-plugin-packagejson"]
      }
    }
  ]
}
